{
	"arrowParens": "avoid",
	"bracketSpacing": false,
  "endOfLine": "lf",
  "jsxBracketSameLine": true,
  "jsxSingleQuote": true,
  "parser": "typescript",
	"printWidth": 140,
	"proseWrap": "preserve",
	"semi": true,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,

	"overrides": [
		{
			"files": "*.{js,jsx}",
			"options": {"parser": "babel"}
		},
		{
			"files": "*.json",
			"options": {
				"parser": "json",
				"singleQuote": false,
				"trailingComma": "none",
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
